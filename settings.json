{
    "eslint.lintTask.enable": true,
    "eslint.format.enable": true,
    "eslint.validate": [
        "typescript"
    ],
    "stylelint.enable": true,
    "stylelint.validate": [
        "scss",
        "css"
    ],
    "css.validate": false,
    "scss.validate": false,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "files.associations": {
        ".eslintrc-target.json": "jsonc"
    },
}